{
  "name": "storyline",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "cd dist && node server.js",
    "dev": "concurrently 'npm:ng:build:watch' 'npm:server:compile' 'npm:server:copy:watch' 'npm:server:copy2:watch' 'npm:server:watch'",
    "build": "npm run build:prod",
    "build:prod": "npm run clear && npm run npm:install && npm run ng:build:prod && npm run server:compile && npm run server:copy",
    "build:staging": "npm run clear && npm run npm:install && npm run ng:build:staging && npm run server:compile && npm run server:copy",
    "clear": "rm -rf dist && rm -rf server/dist",
    "npm:install": "npm install && npm --prefix ./server/ install ./server/",
    "ng:build:watch": "ng build --watch",
    "ng:build:prod": "ng build --configuration production",
    "ng:build:staging": "ng build --configuration staging",
    "server:compile": "( cd server/ ; tsc )",
    "server:copy": "cpx 'server/{package.json,package-lock.json,node_modules/**/*}' dist/ && cpx 'server/dist/**/*' dist/",
    "server:copy:watch": "cpx 'server/{package.json,package-lock.json,node_modules/**/*}' dist/ -w",
    "server:copy2:watch": "cpx 'server/dist/**/*' dist/ -w",
    "server:watch": "cd dist && nodemon server.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.3",
    "@angular/common": "^17.1.3",
    "@angular/compiler": "^17.1.3",
    "@angular/core": "^17.1.3",
    "@angular/forms": "^17.1.3",
    "@angular/platform-browser": "^17.1.3",
    "@angular/platform-browser-dynamic": "^17.1.3",
    "@angular/router": "^17.1.3",
    "@angular/service-worker": "^17.1.3",
    "@apollo/client": "^3.0.0",
    "@fortawesome/angular-fontawesome": "^0.14.1",
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@fortawesome/pro-light-svg-icons": "^6.4.2",
    "@fortawesome/pro-regular-svg-icons": "^6.4.2",
    "@fortawesome/pro-solid-svg-icons": "^6.4.2",
    "apollo-angular": "^6.0.0",
    "dav-js": "git+https://github.com/dav-apps/dav-js.git#v2.6.7",
    "dav-ui-components": "git+https://github.com/dav-apps/dav-ui-components.git#v1.3",
    "graphql": "^16",
    "localforage": "^1.10.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.3",
    "@angular/cli": "^17.1.3",
    "@angular/compiler-cli": "^17.1.3",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^8.2.2",
    "cpx": "^1.5.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nodemon": "^3.0.3",
    "typescript": "~5.3.2"
  }
}
